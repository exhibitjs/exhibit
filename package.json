{
  "name": "exhibit",
  "description": "Incremental build toolkit",
  "version": "0.8.3",
  "ava": {
    "babel": false,
    "files": "dist/test/**/*.test.js",
    "source": "dist/lib/**/*.js"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "transform-runtime"
    ]
  },
  "dependencies": {
    "babel-runtime": "^6.6.1",
    "bluebird": "^3.3.4",
    "chalk": "^1.1.3",
    "connect": "^3.4.1",
    "errorhandler": "^1.4.3",
    "filesize-parser": "^1.3.2",
    "immutable": "^3.7.6",
    "lazy-builder": "^0.1.1",
    "lodash": "^4.8.1",
    "micromatch": "^2.3.7",
    "portscanner-plus": "^0.2.1",
    "pretty-bytes": "^3.0.1",
    "resolve-from": "^2.0.0",
    "sander": "^0.4.0",
    "sane": "^1.3.4",
    "serve-index": "^1.7.3",
    "serve-static": "^1.10.2",
    "stack-trace": "0.0.9",
    "subdir": "^0.0.3"
  },
  "devDependencies": {
    "ava": "^0.13.0",
    "babel-cli": "^6.22.1",
    "babel-eslint": "^6.0.2",
    "babel-plugin-transform-runtime": "^6.6.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "del": "^2.2.0",
    "del-cli": "^0.2.0",
    "eslint": "^2.6.0",
    "eslint-config-airbnb": "^6.2.0",
    "eslint-plugin-babel": "^3.1.0",
    "sinon": "^1.17.3"
  },
  "engines": {
    "node": ">=0.12"
  },
  "files": [
    "dist/lib"
  ],
  "main": "dist/lib/index.js",
  "repository": "exhibitjs/exhibit",
  "scripts": {
    "build": "del dist && babel src --out-dir dist --source-maps",
    "build:watch": "del dist && babel src --out-dir dist --watch --source-maps",
    "prepublish": "npm run build",
    "test": "eslint . && ava",
    "test:watch": "ava --watch"
  }
}
